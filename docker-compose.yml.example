version: '3.7'

networks:
  ashkeepers-rest:
    driver: bridge

volumes:
  db-data:

services:
  webserver:
    image: nginx:1-alpine
    container_name: webserver
    restart: unless-stopped
    tty: true
    ports:
      - "8080:80"
    volumes:
      - ./server:/var/www/server
      - ./server/vendor:/var/www/server/vendor
      - ./client/dist:/var/www/client/dist
      - ./nginx/conf.d/:/etc/nginx/conf.d/
    networks:
      - ashkeepers-rest
  mariadb:
    image: yobasystems/alpine-mariadb:latest
    container_name: mariadb
    restart: unless-stopped
    tty: true
    ports:
      - "3306:3306"
    volumes:
      - db-data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: SuperSecretP4ssw0rd!
      MYSQL_DATABASE: ashkeepersrestwebsite
      MYSQL_USER: web
      MYSQL_PASSWORD: secret
    networks:
      - ashkeepers-rest
  dbadmin:
    image: phpmyadmin/phpmyadmin:latest
    container_name: dbadmin
    restart: unless-stopped
    tty: true
    ports:
      - "8081:80"
    environment:
      PMA_HOST: mariadb
      PMA_PORT: 3306
      PMA_USER: root
      PMA_PASSWORD: SuperSecretP4ssw0rd!
    networks:
      - ashkeepers-rest
  api:
    build:
      context: ./server
      dockerfile: Dockerfile
    container_name: api
    volumes:
      - ./server:/var/www/server
      - ./server/vendor:/var/www/server/vendor
      - ./server/php/dev.ini:/usr/local/etc/php/conf.d/local.ini
    ports:
      - "9000:9000"
    networks:
      - ashkeepers-rest
  client:
    build:
      context: ./
      dockerfile: ./client/Dockerfile.dev
      # Use the production dockerfile if you are only working on the api server
      #context: ./client
      #dockerfile: Dockerfile
    container_name: client
    tty: true
    volumes:
      - ./client/node_modules:/home/node/project/client/node_modules
      - ./:/home/node/project
    ports:
      # Exposes webpack dev server to the host
      - "8000:8000"
    networks:
      - ashkeepers-rest
